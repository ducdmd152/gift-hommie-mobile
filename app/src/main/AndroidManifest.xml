            android:exported="false" />
        <activity
            android:name=".view.CompetePaymentActivity"
            android:exported="false" />
        <activity
            android:name=".view.PaymentActivity"
            android:exported="false" />
        <activity
            android:name=".view.OrderActivity"
            android:exported="false" />
        <activity
            android:name=".view.CheckoutActivity"
            android:exported="false" />
        <activity
            android:name=".view.User_Page_Activity"
            android:exported="false" />
        <activity
            android:name=".view.MapActivity"
            android:exported="false" />
        <activity
            android:name=".view.ProductListActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>